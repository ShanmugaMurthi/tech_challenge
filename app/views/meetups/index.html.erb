<div class="row" align="center">
<%= form_tag(meetups_path, method: :get) do %>
  <div class="col-xs-8" >
  <%= text_field_tag :search_query, params[:search_query],:class=>"form-control input-lg" %>
  </div>
  <div class="col-xs-2">
  <%= submit_tag 'Search', name: nil ,:class=>"btn btn-primary btn-lg"%>
  </div>
<%end%>
</div>

<div class="row container" align="center"> 
  <% if @search_results %>
	<h3>Search Results</h3> 
	<% @search_results.each do |i| %>
      <div class="row" align="center">
		<div class="col-md-8">				
	      <div class="panel panel-default  panel--styled">
			<div class="panel-body">
		      <div class="col-md-12 panelTop">	
				<div class="col-md-4">	
			      <%if i["group_photo"]%>
					<%= image_tag i["group_photo"]["thumb_link"]%>
				  <%else%>
					<img class="img-responsive" src="" alt=""/>
				  <%end%>
				</div>
			    <div class="col-md-8">		
			    <h4><%= link_to "#{i["name"]},#{i["category"]["name"]} ", {controller: "meetups", action: "events",url_name: "#{i["urlname"]}" }, {class: 'myModal', 'data-toggle': 'modal', 'data-target': '#myModal'}%></h4>
			     <p><%=i["status"]%>,<%=i["city"]%></p>
			    </div>
			  </div>
			</div>
          </div>
		</div>
	  </div>
    <%end%> 
  <%end%>
</div>